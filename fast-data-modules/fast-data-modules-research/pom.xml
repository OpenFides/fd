<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>fast-data-modules-research</artifactId>
    <description>fast data project for Spring Boot</description>
    <packaging>jar</packaging>
    <parent>
        <groupId>ltd.fdsa</groupId>
        <artifactId>fast-data-parent</artifactId>
        <version>1.0.0-RELEASE</version>
        <relativePath />
    </parent>
    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <dependency>
            <groupId>ltd.fdsa</groupId>
            <artifactId>fast-data-core</artifactId>
        </dependency>
        <!-- 必选，用于快速创建数据库访问 -->
        <dependency>
            <groupId>ltd.fdsa</groupId>
            <artifactId>fast-data-core-database</artifactId>
        </dependency>
        <!-- 可选，自动记录日志到日志中心 -->
        <dependency>
            <groupId>ltd.fdsa</groupId>
            <artifactId>logger-spring-boot-starter</artifactId>
        </dependency>
        <!-- 可选，自动生成数据库的增删改查 -->
        <dependency>
            <groupId>ltd.fdsa</groupId>
            <artifactId>jdbc-spring-boot-starter</artifactId>
        </dependency>
        <!-- 可选，自动加入到监控中心 -->
        <dependency>
            <groupId>ltd.fdsa</groupId>
            <artifactId>monitor-spring-boot-starter</artifactId>
        </dependency>
        <!-- 根据实现情况选择数据库 -->
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
        </dependency>
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-neo4j</artifactId>
        </dependency>

        <dependency>
            <groupId>org.neo4j</groupId>
            <artifactId>neo4j-ogm-http-driver</artifactId>
        </dependency>
        <dependency>
            <groupId>com.opencsv</groupId>
            <artifactId>opencsv</artifactId>
            <version>3.8</version>
        </dependency>
        <dependency>
            <groupId>org.openjdk.jol</groupId>
            <artifactId>jol-core</artifactId>
            <version>0.14</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <!--执行器 mvn package -->
                    <execution>
                        <id>make-zip</id> <!--名字任意 -->
                        <phase>package</phase> <!-- 绑定到package生命周期阶段上 -->
                        <goals>
                            <goal>single</goal> <!-- 只运行一次 -->
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/resources/assembly.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
